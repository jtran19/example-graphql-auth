{
  "name": "example-graphql-auth",
  "version": "1.0",
  "description": "Example GraphQL endpoint showing an implementation of protected fields.",
  "scripts": {
    "start": "nodemon ./src/server.js --exec babel-node",
    "test": "jest",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0
    },
    "env": {
      "mocha": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "arrowParens": "always"
  },
  "dependencies": {
    "apollo-errors": "^1.5.1",
    "apollo-resolvers": "^1.0.3",
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "^0.12.3",
    "graphql-relay": "^0.5.4",
    "graphql-tools": "^2.19.0",
    "jsonwebtoken": "^8.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^22.1.4",
    "nodemon": "^1.14.11"
  }
}
